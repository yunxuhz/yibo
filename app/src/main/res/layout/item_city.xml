<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_item">

    <TextView
        android:id="@+id/item_city_alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_efeff4"
        android:padding="10dp"
        android:textColor="@color/font_7c738c"/>

    <TextView
        android:id="@+id/item_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_city_alpha"
        android:padding="10dp"
        android:singleLine="true"
        android:text="name"
        android:textColor="@color/font_130b27"/>
</RelativeLayout>